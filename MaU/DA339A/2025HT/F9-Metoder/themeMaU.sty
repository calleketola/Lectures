% Base colours
\setbeamercolor{title}{bg=white, fg=black}
\setbeamercolor{author}{bg=white, fg=black}
\setbeamercolor{institute}{bg=white, fg=black}
\setbeamercolor{date}{bg=white, fg=black}
\setbeamercolor{palette primary}{bg=malmo-red, fg=white}
\setbeamercolor{palette quaternary}{bg=malmo-red, fg=white}
\setbeamercolor{background canvas}{bg=malmo-yellow-lighter, fg=black}
\setbeamercolor{section in toc}{fg=black}
\setbeamercolor{structure}{fg=black}

% Add dividing line
\addtobeamertemplate{headline}{}{
  \vskip0pt
  \begin{beamercolorbox}[wd=\paperwidth,ht=1em]{myseparator}
  \end{beamercolorbox}
}

% Alternate colours in sections
\newcounter{section-number}
\AtBeginSection[]{
    \stepcounter{section-number}
    \ifnum\value{section-number}=1
        \setbeamercolor{background canvas}{bg=malmo-yellow-lighter}
    \fi
    \ifnum\value{section-number}=2
        \setbeamercolor{background canvas}{bg=malmo-orange-lighter}
    \fi
    \ifnum\value{section-number}=3
        \setbeamercolor{background canvas}{bg=malmo-turquoise-lighter}
    \fi
    \ifnum\value{section-number}=4
        \setbeamercolor{background canvas}{bg=malmo-green-lighter}
    \fi
    \ifnum\value{section-number}=5
        \setbeamercolor{background canvas}{bg=malmo-pink-lighter}
    \fi
}